<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.willowtreeapps.scratch">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".ScratchTileService"
            android:icon="@drawable/scratch_icon"
            android:label="Scratch"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
        <receiver tools:replace="android:enabled" android:name="com.willowtreeapps.scratchlib.ScratchReceiver" android:exported="true" android:enabled="false">

        </receiver>
        <receiver
            android:name=".CleanReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.willowtreeapps.scratch.RESTART" />
            </intent-filter>
        </receiver>
    </application>

</manifest>